<?xml version="1.0" encoding="utf-8" ?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="yuku.alkitab" android:installLocation="auto" android:versionCode="100" android:versionName="2.6.3" xmlns:tools="http://schemas.android.com/tools">
	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.NFC" />
	
	<uses-feature android:name="android.hardware.touchscreen" android:required="false" />
	<uses-feature android:name="android.hardware.nfc" android:required="false" />
	
	<supports-screens android:largeScreens="true" android:resizeable="true" android:smallScreens="true" android:normalScreens="true" android:anyDensity="true" />

	<application android:name="yuku.alkitab.base.App" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:hardwareAccelerated="true" android:theme="@style/Theme.Sherlock">
		<activity android:name="yuku.alkitab.base.IsiActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale" android:theme="@style/Theme.AlkitabIsi">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/vnd.yuku.alkitab.nfc.beam" />
            </intent-filter>
            <intent-filter>
                <action android:name="yuku.alkitab.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>

		<activity android:name="yuku.alkitab.base.ac.GotoActivity" android:label="@string/tuju_v" android:configChanges="locale" android:windowSoftInputMode="adjustNothing" />
		<activity android:name="yuku.alkitab.base.ac.SettingsActivity" android:label="@string/pengaturan_alkitab" android:configChanges="keyboardHidden|orientation|screenSize|locale" />
		<activity android:name="yuku.alkitab.base.ac.BookmarkActivity" android:label="@string/judul_bukmak_activity" android:configChanges="keyboardHidden|orientation|screenSize|locale" tools:ignore="ExportedActivity">
		    <intent-filter android:label="@string/intent_filter_import_from_backup">
		        <action android:name="android.intent.action.VIEW" />
		        <category android:name="android.intent.category.DEFAULT" />
		        <category android:name="android.intent.category.BROWSABLE" />
		        <data android:scheme="file" />
		        <data android:scheme="content" />
		        <data android:mimeType="text/xml" />
		        <data android:host="*" />
		    </intent-filter>
		    <intent-filter android:label="@string/intent_filter_import_from_backup">
		        <action android:name="android.intent.action.VIEW" />
		        <category android:name="android.intent.category.DEFAULT" />
		        <category android:name="android.intent.category.BROWSABLE" />
		        <data android:scheme="file" />
		        <data android:scheme="content" />
		        <data android:mimeType="*/*" />
		        <data android:host="*" />
		        <data android:pathPattern=".*\\.xml" />
		        <data android:pathPattern=".*\\..*\\.xml" />
		        <data android:pathPattern=".*\\..*\\..*\\.xml" />
		        <data android:pathPattern=".*\\..*\\..*\\..*\\.xml" />
		        <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\.xml" />
		        <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\.xml" />
		    </intent-filter>
   		</activity>
		<activity android:name="yuku.alkitab.base.ac.BookmarkListActivity" android:label="@string/pembatas_buku" android:configChanges="keyboardHidden|orientation|screenSize|locale" android:windowSoftInputMode="adjustResize|stateHidden" />
		<activity android:name="yuku.alkitab.base.ac.VersionsActivity" android:label="@string/kelola_versi" android:configChanges="keyboardHidden|orientation|screenSize|locale" />
		<activity android:name="yuku.alkitab.base.ac.Search2Activity" android:label="@string/cari_v" android:configChanges="keyboardHidden|orientation|screenSize|locale" android:theme="@style/Theme.Sherlock.NoActionBar" />
		<activity android:name="yuku.alkitab.base.ac.DevotionActivity" android:label="@string/renungan" android:configChanges="keyboardHidden|orientation|screenSize|locale" android:theme="@style/Theme.Sherlock.NoActionBar" />
		<activity android:name="yuku.alkitab.base.ac.HelpActivity" android:label="@string/bantuan_judul" android:configChanges="keyboardHidden|orientation|screenSize|locale" />
		<activity android:name="yuku.alkitab.base.ac.AboutActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale" />
		<activity android:name="yuku.alkitab.base.ac.ShareActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale" />
		<activity android:name="yuku.alkitab.base.ac.FontManagerActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale" />
		<activity android:name="yuku.alkitab.base.ac.SongListActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale" android:windowSoftInputMode="adjustResize|stateHidden" />
		<activity android:name="yuku.alkitab.base.ac.SongViewActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale" />
		<activity android:name="yuku.alkitab.base.ac.AudioActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale"/>		
		<activity android:name="yuku.filechooser.FileChooserActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale" />
		
		<service android:name="yuku.alkitab.base.sv.DownloadService" />
		
		<provider android:name="yuku.alkitab.base.cp.Provider" android:authorities="yuku.alkitab.provider" />
	</application>
</manifest>
